<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_resignation_view_list" model="ir.ui.view">
            <field name="name">hr.resignation.view.list</field>
            <field name="model">hr.resignation</field>
            <field name="arch" type="xml">
                <list string="Employee Resignation">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="employee_contract"/>
                    <field name="contract_start_date"/>
                    <field name="expected_revealing_date"/>
                    <field name="approved_revealing_date"
                           groups="hr_resignation.group_hr_resignation_manager"/>
                    <field name="resignation_type"
                           groups="hr_resignation.group_hr_resignation_manager"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

<record id="hr_resignation_view_form" model="ir.ui.view">
    <field name="name">hr.resignation.view.form</field>
    <field name="model">hr.resignation</field>
    <field name="arch" type="xml">
        <form string="Employee Resignation">
            <header>
                <button string="Confirm" type="object"
                        name="action_confirm_resignation"
                        invisible="state != 'draft'"
                        class="btn-primary"/>
                <button string="Cancel" type="object"
                        name="action_cancel_resignation"
                        invisible="state != 'draft'"/>
                <button string="Approve" type="object"
                        name="action_approve_resignation"
                        groups="hr_resignation.group_hr_resignation_manager"
                        invisible="state != 'confirm'"
                        class="btn-primary"/>
                <button string="Reject" type="object"
                        name="action_cancel_resignation"
                        groups="hr_resignation.group_hr_resignation_manager"
                        invisible="state != 'confirm'"/>
                <button string="Set to Draft" type="object"
                        name="action_reset_to_draft"
                        groups="hr_resignation.group_hr_resignation_manager"
                        invisible="state != 'approved'"/>
                <field name="state" widget="statusbar"
                       statusbar_visible="draft,confirm,approved"/>
            </header>
            <sheet>
                <group>
                    <group string="Employee Details">
                        <field name="is_own_record" invisible="1"/>
                        <field name="employee_id" readonly="state != 'draft'"/>
                        <field name="department_id" readonly="1"/>
                        <field name="employee_contract" readonly="1"/>
                    </group>

                    <group string="Dates">
                        <field name="contract_start_date"
                               readonly="not is_own_record or state != 'draft'"/>
                        <field name="expected_revealing_date"
                               readonly="not is_own_record or state != 'draft'"/>
                        <field name="approved_revealing_date"
                               readonly="1"
                               groups="hr_resignation.group_hr_resignation_manager"/>
                    </group>

                    <group string="Resignation Details">
                        <field name="resignation_type"
                               groups="hr_resignation.group_hr_resignation_manager"/>
                        <field name="reason" widget="textarea"
                               readonly="not is_own_record or state != 'draft'"/>
                    </group>
                </group>
            </sheet>
            <chatter/>
        </form>
    </field>
</record>

        <record id="action_hr_resignation" model="ir.actions.act_window">
            <field name="name">Employee Resignations</field>
            <field name="res_model">hr.resignation</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Parent menu: no action, no group = visible to everyone -->
        <menuitem id="menu_hr_resignation"
                  name="Resignations"
                  parent="hr.menu_hr_root"
                  sequence="10"/>

        <!-- Submenu: no group = all internal users see it -->
        <menuitem id="menu_hr_resignation_list"
                  name="My Resignations"
                  parent="menu_hr_resignation"
                  action="action_hr_resignation"
                  sequence="10"/>

    </data>
</odoo>