<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="group_hr_resignation_employee" model="res.groups">
            <field name="name">Resignation Employee</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_hr_resignation_manager" model="res.groups">
            <field name="name">Resignation Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[
                (4, ref('group_hr_resignation_employee')),
                (4, ref('hr.group_hr_manager')),
                (4, ref('hr_contract.group_hr_contract_manager')),
            ]"/>
        </record>

    </data>
</odoo>