<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================================ -->
        <!-- Document Type List View          -->
        <!-- ================================ -->
        <record id="hr_employee_document_type_view_list" model="ir.ui.view">
            <field name="name">hr.employee.document.type.view.list</field>
            <field name="model">hr.employee.document.type</field>
            <field name="arch" type="xml">
                <list string="Document Types">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="document_count" string="Documents"/>
                </list>
            </field>
        </record>

        <!-- ================================ -->
        <!-- Document Type Form View          -->
        <!-- ================================ -->
        <record id="hr_employee_document_type_view_form" model="ir.ui.view">
            <field name="name">hr.employee.document.type.view.form</field>
            <field name="model">hr.employee.document.type</field>
            <field name="arch" type="xml">
                <form string="Document Type">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_documents"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-file-text-o">
                                <field name="document_count" widget="statinfo" string="Documents"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                        </group>
                        <group string="Description">
                            <field name="description" nolabel="1" widget="text"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ================================ -->
        <!-- Document Type Action             -->
        <!-- ================================ -->
        <record id="action_hr_employee_document_type" model="ir.actions.act_window">
            <field name="name">Document Types</field>
            <field name="res_model">hr.employee.document.type</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>
