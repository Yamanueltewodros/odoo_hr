<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_offense_classification_list" model="ir.ui.view">
        <field name="name">hr.offense.classification.list</field>
        <field name="model">hr.offense.classification</field>
        <field name="arch" type="xml">
            <list string="Offense Classifications" decoration-danger="is_immediate_dismissal == True"
                  decoration-warning="severity_level == 'serious'">
                <field name="name"/>
                <field name="severity_level" widget="badge"
                       decoration-danger="severity_level == 'gross'"
                       decoration-warning="severity_level == 'serious'"
                       decoration-info="severity_level == 'moderate'"/>
                <field name="default_action_type"/>
                <field name="approval_level"/>
                <field name="investigation_required" widget="boolean_toggle"/>
                <field name="is_immediate_dismissal" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_hr_offense_classification_form" model="ir.ui.view">
        <field name="name">hr.offense.classification.form</field>
        <field name="model">hr.offense.classification</field>
        <field name="arch" type="xml">
            <form string="Offense Classification">
                <sheet>
                    <widget name="web_ribbon" title="Immediate Dismissal"
                            bg_color="bg-danger"
                            invisible="not is_immediate_dismissal"/>
                    <group>
                        <group string="Classification Details">
                            <field name="name"/>
                            <field name="severity_level"/>
                            <field name="default_action_type" readonly="1"/>
                            <field name="approval_level"/>
                        </group>
                        <group string="Flags">
                            <field name="investigation_required"/>
                            <field name="is_immediate_dismissal"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                    <group string="Audit">
                        <field name="created_by" readonly="1"/>
                        <field name="updated_by" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_offense_classification" model="ir.actions.act_window">
        <field name="name">Offense Classifications</field>
        <field name="res_model">hr.offense.classification</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>