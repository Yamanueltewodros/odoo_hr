<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_exit_interview_view_list" model="ir.ui.view">
            <field name="name">hr.exit.interview.view.list</field>
            <field name="model">hr.exit.interview</field>
            <field name="arch" type="xml">
                <list string="Exit Interviews">
                    <field name="employee_id"/>
                    <field name="interview_date"/>
                    <field name="exit_reason"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="hr_exit_interview_view_form" model="ir.ui.view">
            <field name="name">hr.exit.interview.view.form</field>
            <field name="model">hr.exit.interview</field>
            <field name="arch" type="xml">
                <form string="Exit Interview">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object"
                                class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_done" string="Mark as Done" type="object"
                                class="btn-primary" invisible="state != 'confirmed'"/>
                        <button name="action_reset_draft" string="Reset to Draft" type="object"
                                invisible="state == 'draft'"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,confirmed,done"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id" readonly="1"/>
                            <field name="resignation_id"/>
                            <field name="interview_date"/>
                            <field name="interviewer_id"/>
                            <field name="exit_reason"/>
                            <field name="would_rehire"/>
                        </group>
                        <notebook>
                            <page string="Ratings">
                                <group>
                                    <field name="work_environment_rating"/>
                                    <field name="management_rating"/>
                                    <field name="compensation_rating"/>
                                    <field name="growth_rating"/>
                                </group>
                            </page>
                            <page string="Feedback">
                                <field name="feedback"/>
                            </page>
                            <page string="Recommendations">
                                <field name="recommendation"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="action_hr_exit_interview" model="ir.actions.act_window">
            <field name="name">Exit Interviews</field>
            <field name="res_model">hr.exit.interview</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Restricted to HR Administrator only -->
        <menuitem id="menu_hr_exit_interview"
                  name="Exit Interviews"
                  parent="hr_resignation.menu_hr_resignation"
                  action="action_hr_exit_interview"
                  sequence="20"
                  groups="hr_exit_interview.group_hr_exit_interview_manager"/>

    </data>
</odoo>