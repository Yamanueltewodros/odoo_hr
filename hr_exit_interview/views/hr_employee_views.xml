<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_form_exit_button" model="ir.ui.view">
            <field name="name">hr.employee.form.exit.button</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_exit_interviews"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-comments"
                            groups="hr.group_hr_manager">
                        <field name="exit_interview_count"
                               widget="statinfo"
                               string="Exit Interviews"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>