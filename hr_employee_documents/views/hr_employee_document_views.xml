<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================================ -->
        <!-- Document List View               -->
        <!-- ================================ -->
        <record id="hr_employee_document_view_list" model="ir.ui.view">
            <field name="name">hr.employee.document.view.list</field>
            <field name="model">hr.employee.document</field>
            <field name="arch" type="xml">
                <list string="Employee Documents"
                      decoration-danger="expiry_status == 'expired'"
                      decoration-warning="expiry_status == 'expiring_soon'"
                      decoration-success="expiry_status == 'valid'">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id" optional="show"/>
                    <field name="document_type_id"/>
                    <field name="upload_date"/>
                    <field name="expiry_date"/>
                    <field name="days_to_expiry" string="Days Left" optional="show"/>
                    <field name="expiry_status" widget="badge"
                           decoration-danger="expiry_status == 'expired'"
                           decoration-warning="expiry_status == 'expiring_soon'"
                           decoration-success="expiry_status == 'valid'"
                           decoration-info="expiry_status == 'no_expiry'"/>
                    <field name="active" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- ================================ -->
        <!-- Document Form View               -->
        <!-- ================================ -->
        <record id="hr_employee_document_view_form" model="ir.ui.view">
            <field name="name">hr.employee.document.view.form</field>
            <field name="model">hr.employee.document</field>
            <field name="arch" type="xml">
                <form string="Employee Document">
                    <sheet>
                        <!-- Expiry alert banners -->
                        <div class="alert alert-danger"
                             invisible="expiry_status != 'expired'"
                             role="alert">
                            <i class="fa fa-exclamation-triangle"/> This document has <strong>expired</strong>.
                            Please upload a renewed version.
                        </div>
                        <div class="alert alert-warning"
                             invisible="expiry_status != 'expiring_soon'"
                             role="alert">
                            <i class="fa fa-clock-o"/> This document is <strong>expiring soon</strong>
                            (<field name="days_to_expiry" readonly="1"/> days remaining).
                        </div>

                        <group>
                            <group string="Document Details">
                                <field name="name"/>
                                <field name="employee_id"/>
                                <field name="department_id" readonly="1"/>
                                <field name="document_type_id"/>
                            </group>
                            <group string="Dates">
                                <field name="upload_date"/>
                                <field name="expiry_date"/>
                                <field name="expiry_status" widget="badge"
                                       decoration-danger="expiry_status == 'expired'"
                                       decoration-warning="expiry_status == 'expiring_soon'"
                                       decoration-success="expiry_status == 'valid'"
                                       decoration-info="expiry_status == 'no_expiry'"
                                       readonly="1"/>
                            </group>
                        </group>

                        <group string="Description">
                            <field name="description" nolabel="1" widget="text"/>
                        </group>

                        <group string="File">
                            <field name="file" filename="file_name" widget="binary"/>
                            <field name="file_name" invisible="1"/>
                        </group>

                        <field name="is_own_document" invisible="1"/>
                        <field name="expiry_status" invisible="1"/>

                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- ================================ -->
        <!-- Document Kanban View             -->
        <!-- ================================ -->
        <record id="hr_employee_document_view_kanban" model="ir.ui.view">
            <field name="name">hr.employee.document.view.kanban</field>
            <field name="model">hr.employee.document</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="document_type_id">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="document_type_id"/>
                    <field name="expiry_date"/>
                    <field name="expiry_status"/>
                    <field name="file_name"/>
                    <templates>
                        <t t-name="card">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click
                                #{record.expiry_status.raw_value == 'expired' ? 'border-danger' : ''}
                                #{record.expiry_status.raw_value == 'expiring_soon' ? 'border-warning' : ''}">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><i class="fa fa-user"/> <field name="employee_id"/></div>
                                    <div t-if="record.expiry_date.raw_value">
                                        <i class="fa fa-calendar"/> Expires: <field name="expiry_date"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="expiry_status" widget="badge"
                                               decoration-danger="expiry_status == 'expired'"
                                               decoration-warning="expiry_status == 'expiring_soon'"
                                               decoration-success="expiry_status == 'valid'"
                                               decoration-info="expiry_status == 'no_expiry'"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ================================ -->
        <!-- Document Search View             -->
        <!-- ================================ -->
        <record id="hr_employee_document_view_search" model="ir.ui.view">
            <field name="name">hr.employee.document.view.search</field>
            <field name="model">hr.employee.document</field>
            <field name="arch" type="xml">
                <search string="Search Documents">

                    <field name="name" string="Document Name"/>
                    <field name="employee_id" string="Employee"/>
                    <field name="document_type_id" string="Document Type"/>

                    <separator/>

                    <!-- Expiry filters -->
                    <filter name="filter_expired"
                            string="Expired"
                            domain="[('expiry_status', '=', 'expired')]"/>
                    <filter name="filter_expiring_soon"
                            string="Expiring Soon (30 days)"
                            domain="[('expiry_status', '=', 'expiring_soon')]"/>
                    <filter name="filter_valid"
                            string="Valid"
                            domain="[('expiry_status', '=', 'valid')]"/>
                    <filter name="filter_no_expiry"
                            string="No Expiry Date"
                            domain="[('expiry_status', '=', 'no_expiry')]"/>

                    <separator/>

                    <filter name="filter_my_documents"
                            string="My Documents"
                            domain="[('employee_id.user_id', '=', uid)]"/>

                    <separator/>

                    <filter name="filter_inactive"
                            string="Archived"
                            domain="[('active', '=', False)]"/>

                    <!-- Group by -->
                    <group expand="0" string="Group By">
                        <filter name="group_employee"
                                string="Employee"
                                context="{'group_by': 'employee_id'}"/>
                        <filter name="group_document_type"
                                string="Document Type"
                                context="{'group_by': 'document_type_id'}"/>
                        <filter name="group_department"
                                string="Department"
                                context="{'group_by': 'department_id'}"/>
                        <filter name="group_expiry_status"
                                string="Expiry Status"
                                context="{'group_by': 'expiry_status'}"/>
                    </group>

                </search>
            </field>
        </record>

        <!-- ================================ -->
        <!-- Document Action (All Documents)  -->
        <!-- ================================ -->
        <record id="action_hr_employee_document" model="ir.actions.act_window">
            <field name="name">HR Documents</field>
            <field name="res_model">hr.employee.document</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="search_view_id" ref="hr_employee_document_view_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Upload your first employee document!
                </p>
                <p>
                    Manage employee documents, track expiry dates, and keep everything organized.
                </p>
            </field>
        </record>

        <!-- ================================ -->
        <!-- My Documents Action (Employee)   -->
        <!-- ================================ -->
        <record id="action_hr_my_documents" model="ir.actions.act_window">
            <field name="name">My Documents</field>
            <field name="res_model">hr.employee.document</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="hr_employee_document_view_search"/>
            <field name="domain">[('employee_id.user_id', '=', uid)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No documents found for your profile.
                </p>
                <p>
                    Your HR team will upload documents here for you to view.
                </p>
            </field>
        </record>

        <!-- ========================================= -->
        <!-- Menus                                     -->
        <!-- ========================================= -->

        <!-- Parent menu under Employees -->
        <menuitem id="menu_hr_documents_root"
                  name="HR Documents"
                  parent="hr.menu_hr_root"
                  sequence="15"/>

        <!-- All Documents - visible to HR Officers and Managers -->
        <menuitem id="menu_hr_documents_all"
                  name="All Documents"
                  parent="menu_hr_documents_root"
                  action="action_hr_employee_document"
                  sequence="10"
                  groups="hr_employee_documents.group_hr_document_officer"/>

        <!-- My Documents - visible to all employees -->
        <menuitem id="menu_hr_documents_mine"
                  name="My Documents"
                  parent="menu_hr_documents_root"
                  action="action_hr_my_documents"
                  sequence="20"/>

        <!-- Document Types - visible to managers only -->
        <menuitem id="menu_hr_document_types"
                  name="Document Types"
                  parent="menu_hr_documents_root"
                  action="action_hr_employee_document_type"
                  sequence="30"
                  groups="hr_employee_documents.group_hr_document_manager"/>

    </data>
</odoo>
