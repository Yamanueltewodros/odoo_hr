<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--
            Employee Rule:
            - Can only READ their own documents
            - Blocked from seeing any other employee's documents
        -->
        <record id="hr_document_rule_employee_own" model="ir.rule">
            <field name="name">HR Document: Employee Sees Own Only</field>
            <field name="model_id" ref="hr_employee_documents.model_hr_employee_document"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('hr_employee_documents.group_hr_document_employee'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!--
            Officer Rule:
            - Can read, create, edit documents for ALL employees
        -->
        <record id="hr_document_rule_officer_all" model="ir.rule">
            <field name="name">HR Document: Officer Full Read-Write</field>
            <field name="model_id" ref="hr_employee_documents.model_hr_employee_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('hr_employee_documents.group_hr_document_officer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!--
            Manager Rule:
            - Full unrestricted access to ALL documents
        -->
        <record id="hr_document_rule_manager_all" model="ir.rule">
            <field name="name">HR Document: Manager Full Access</field>
            <field name="model_id" ref="hr_employee_documents.model_hr_employee_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('hr_employee_documents.group_hr_document_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
